
@{
    ViewBag.Title = "Inventory";
}

<div class="sidebarcolumn">
    @Html.Partial("_sidebar")
</div>
<div class="content-wrapper">
    <h2>Inventory</h2>
    <div class="inventorybooks">
    @foreach(BOOK book in ViewBag.BookList)
    {
        <div class="book">
            <a href='@Url.Action("BookDetails","Home", new { bookcode = book.BOOK_CODE})'>
                <img class="bookimage" src="@book.getThumbnailPath()" />
            </a>
        </div>
    }
    </div>
</div>

